<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1f5fe"
    tools:context=".CheckOutActivity">

    <TextView
        android:id="@+id/tvVisa"
        android:layout_width="383dp"
        android:layout_height="40dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="21dp"
        android:background="#eceff1"
        android:fontFamily="@font/anonymous_pro"
        android:paddingStart="12dp"
        android:paddingEnd="0dp"
        android:text="@string/credit_card_visa"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_visa_credit_card"
        app:layout_constraintBottom_toTopOf="@+id/tvPayPal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPayPal"
        android:layout_width="381dp"
        android:layout_height="40dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="24dp"
        android:background="#eceff1"
        android:fontFamily="@font/anonymous_pro"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/paypal"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_paypal"
        app:layout_constraintBottom_toTopOf="@+id/tvMpesa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVisa" />

    <TextView
        android:id="@+id/tvMpesa"
        android:layout_width="383dp"
        android:layout_height="40dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="317dp"
        android:background="#eceff1"
        android:fontFamily="@font/anonymous_pro"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/lipa_na_mpesa"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_m_pesa_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPayPal" />
</androidx.constraintlayout.widget.ConstraintLayout>